<div class="repair">
  <h2>
    {{ title }}
  </h2>
  <div class="row justify-content-center mt-3 mt-xl-5">
    {% for model in list_models %}
      <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 col-xl-2">
        <a href="/repairing/services/{{ model.tid }}">
          <div class="card mb-3 mb-lg-4 p-1">
            <div class="card-inner">
              <img src="{{ model.image_url }}"
                class=""
                alt="{{ model.name }}" />
            </div>
            <div class="card-body text-center">
              <p class="card-text">
                {{ model.name }}
              </p>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>
